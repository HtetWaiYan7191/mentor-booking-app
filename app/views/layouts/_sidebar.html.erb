<section class="side-bar w-[20%] border-r-2 bg-gray-200 shadow-sm h-[100%] fixed top-0 left-0 overflow-x-hidden pt-20">
    <h2 class="text-lg font-semibold text-center">Side bar</h2>
    <ul class="flex flex-col items-center side-bar-container">
        <% if user_signed_in? %>
            <%= link_to "Profile Page", edit_profile_path(id: current_user.id)%>
        <% end %>
    </ul>
        <div class="flex justify-center my-4">
        <% if user_signed_in? %>
            <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete }, class: 'btn-primary' %>
        <% else %>
            <%= link_to "Sign In", new_user_session_path, class: 'btn-primary' %>
        <% end %>
        </div>

</section>